
@model FNC_AB_ORDER_MANAGEMENT.Models.AdminChangePasswordModel
@{
    ViewBag.Title = "ChangePw";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangePw", "HanteraKonton", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Byt lösenord" class="btn btn-default" />
        </div>
    </div>

   
        <div>
            @Html.ActionLink("Tillbaka", "RedigeraAnvandare/" + Model.Id)
        </div>

    <script>


        $("form").submit(function(eventObj) {


            $('<input />').attr('type', 'hidden')
                .attr('name', "Id")
                .attr('value', "@Model.Id")
                .appendTo('form');
        });
    </script>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}






@model FNC_AB_ORDER_MANAGEMENT.Models.UtsattningarModel


@{
    ViewBag.Title = "Utsättningar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <style type="text/css" src="content/jquery.dataTables.min.css"></style>
    <script type="text/javascript" src="~/scripts/jquery-1.12.4.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.dataTables.min.js"></script>
</header>

<div class="container">
    <h2 style="vertical-align: middle; text-align: center; font-weight: bold">Utsättningar</h2>
    <hr />
    <div class="form-group">
        <div>
            <hr />
            <h3 style=" width:50%; text-align:center;" id="StatusSortering">   @Model.Status </h3>
        </div>
        <div class="col-md-offset-2 col-md-10">


            <input id="p" type="button" Onclick="location.href='@Url.Action("Utsattningar",new {sta="Pågående"})'" value="Pågående" class="btn btn-default" />
            <input id="es" type="button" Onclick="location.href='@Url.Action("Utsattningar",new {sta="Ej slutförd"})'" value="Ej slutförd" class="btn btn-default" />
            <input id="eg" type="button" Onclick="location.href='@Url.Action("Utsattningar",new {sta="Ej genomförbar"})'" value="Ej genomförbar" class="btn btn-default" />
            <input id="s" type="button" Onclick="location.href='@Url.Action("Utsattningar",new {sta="Slutförd"})'" value="Slutförd" class="btn btn-default" />
        </div>
    </div>
</div>

        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Kund</th>
                    <th>Status</th>
                    <th>Adress</th>
                    <th>Ordernr</th>
                    <th>Start Datum</th>
                    <th>Övrigt</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Kund</th>
                    <th>Status</th>
                    <th>Adress</th>
                    <th>Ordernr</th>
                    <th>Start Datum</th>
                    <th>Övrigt</th>
                </tr>
            </tfoot>
            <tbody>
                @{
                    if (Model != null)
                    {
                        foreach (var item in Model.UtsattningsLista)
                        {
                            <tr>
                                <td Onclick="location.href='@Url.Action("RedigerUtsattningar/"+item.ID, "Utsattningar")'">@item.KundNamn</td>
                                <td>@item.Status</td>
                                <td>@item.Adress</td>
                                <td>@item.Ordernr</td>
                                <td>
                                    @if (item.InDatum != null)
                                    {
                                        @item.InDatum.Value.ToShortDateString()
                                    }
                                </td>
                                <td>@item.Ovrigt</td>
                            </tr>
                        }
                    }
                }

            </tbody>
        </table>
        <div class="form-group">
            <input type="button" value="Ny Utsättning" class="btn btn-default" onclick="location.href='@Url.Action("NyUtsattning", "Utsattningar")'" />
        </div>
        <script>
            $(document).ready(function () {
                $('#example').DataTable();
            });
        </script>






        console.log(strUser);

        $('<input />').attr('type', 'hidden')
            .attr('name', "Status")
            .attr('value', st)
            .appendTo('form');

    });

    $(document).ready(function(){
        $("select").chosen({allow_single_deselect:true});
    });   

    $('#edit').click(function() {

        $('#Timmar').prop('readOnly', false);
        $('#Fakturerad').prop('disabled', false).trigger("chosen:updated");
        $('#Ovrigt').prop('readOnly', false);
       // $('#Status').prop('readOnly', false);
        $('#GPS').prop('disabled', false).trigger("chosen:updated");
